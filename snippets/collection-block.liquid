<div class="product-block collection-block" data-collection-id="{{ collection.id }}" {{ custom_attrs }}>
  <div class="block-inner">
    <a class="product-link" href="{{ collection.url }}">
      <div class="image-cont">
        {% if collection.image %}
          {% assign collection_image = collection.image %}
        {% else %}
          {% assign collection_image = collection.products.first.featured_media.preview_image %}
        {% endif %}

        {% if collection_image != blank %}
          {% render 'responsive-image', image: collection_image, manual_image_load: manual_image_load %}
        {% else %}
          <div class="placeholder-image">{{ 'collection-1' | placeholder_svg_tag }}</div>
        {% endif %}
      </div>
      <div class="product-info">
        <div class="product-block__title">{{ collection.title }}</div>
        {% if section.settings.show_count and collection.all_products_count > 0 %}
          <div class="small">{{ 'collections.general.product_count' | t: count: collection.all_products_count }}</div>
        {% endif %}
      </div>
    </a>
  </div>
</div>
